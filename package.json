{
  "name": "fpipe",
  "description": "A module for grafting a function pipe (middleware) over other functions in nodejs.",
  "version": "1.0.0",
  "keywords": [
    "pipe",
    "series",
    "pipeline",
    "middleware"
  ],
  "author": {
    "name": "Phillip Clark",
    "email": "phillip@flitbit.org"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/flitbit/fpipe.git"
  },
  "main": "./index.js",
  "scripts": {
    "preversion": "npm run test",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "nodemon --ext js,json,yml --exec \"npm test\"",
    "lint": "eslint lib test",
    "ci": "npm run test"
  },
  "devDependencies": {
    "bluebird": "^3.5.2",
    "eslint": "^5.6.1",
    "eslint-plugin-jest": "^21.24.1",
    "jest": "^23.6.0",
    "jest-junit-reporter": "^1.1.0",
    "nodemon": "^1.18.4"
  },
  "dependencies": {
    "is-promise": "^2.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testResultsProcessor": "./node_modules/jest-junit-reporter",
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": ".coverage",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/examples/**"
    ]
  }
}
